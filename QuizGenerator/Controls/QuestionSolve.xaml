<UserControl x:Class="QuizGenerator.QuestionSolve"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <StackPanel Orientation="Vertical">

            

            <TextBlock>
            Treść pytania:
            <Run Text="{Binding QuestionText, Mode=TwoWay}" />
            </TextBlock>

            <Label Content="{Binding OptionA}"></Label>
            <RadioButton GroupName="{Binding QuestionViewModel.Id}" Content="A" Tag="A"></RadioButton>

            <Label Content="{Binding OptionB}"></Label>
            <RadioButton GroupName="{Binding QuestionViewModel.Id}" Content="B" Tag="B"></RadioButton>

            <Label Content="{Binding OptionC}"></Label>
            <RadioButton GroupName="{Binding QuestionViewModel.Id}" Content="C" Tag="C"></RadioButton>

            <Label Content="{Binding OptionD}"></Label>
            <RadioButton GroupName="{Binding QuestionViewModel.Id}" Content="D" Tag="D"></RadioButton>

        </StackPanel>
    </Grid>
</UserControl>
